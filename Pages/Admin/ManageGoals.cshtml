@page
@model MOYO_Website.Pages.Admin.GoalsModel
@{
    Layout = "_Layout";
}

<h3>Manange Goals</h3>
<br />
<div>
    @Model.Message
</div>
<form method="post">

    @if (Model.isNew)
    {

        <div class="form-group">

            <label asp-for="currentGoals.Description" class="control-label "></label>

            <input asp-for="currentGoals.Description" class="form-control" />

        </div>
        <div class="form-group">
            <button type="submit" asp-page-handler="Submit">Submit</button>
        </div>

    }

    <br />

    <div class="form-group" style="align-content:flex-end">
        <button type="submit" asp-page-handler="NewGoal">New Goals</button>
    </div>

      <table class="table table-striped border">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.dbGoals[0].GoalId) </th>
                <th> @Html.DisplayNameFor(model => model.dbGoals[0].Description)</th>
                <th> @Html.DisplayNameFor(model => model.dbGoals[0].CreatedDate) </th>
                <th> @Html.DisplayNameFor(model => model.dbGoals[0].LastModifiedDate) </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model.GoalsListFound)
            {
                @foreach (var item in Model.dbGoals)
                {

                    <tr>

                       <td>@Html.DisplayFor(modelItem => item.GoalId) </td>
                            <td>@Html.DisplayFor(modelItem => item.Description) </td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedDate) </td>
                            <td>@Html.DisplayFor(modelItem => item.LastModifiedDate) </td>


                    </tr>
                }

            }
        </tbody>
    </table>
</form>

     

 
    