<body class="body-style">
    <div class="container_calendar">
        <div class="left">
            <div class="calendar">
                <div class="month">
                    <i class="fa fa-angle-left prev"></i>
                    <div class="date"></div>
                    <i class="fa fa-angle-right next"></i>
                </div>
                <div class="weekdays">
                    <div>Sun</div>
                    <div>Mon</div>
                    <div>Tue</div>
                    <div>Wed</div>
                    <div>Thu</div>
                    <div>Fri</div>
                    <div>Sat</div>
                </div>
                <div class="days">
                    <!-- days are added via js -->

                </div>
                <div class="goto-today">
                    <div class="goto">
                        <input type="text" placeholder="mm/yyyy" class="date-input" />
                        <button class="goto-btn">Go</button>
                    </div>
                    <button class="today-btn">Today</button>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="today-date">
                <div class="event-day">Wed</div>
                <div class="event-date">15 February 2023</div>
            </div>
            <div class="events">
                <!-- events are added through JavaScript -->

            </div>
            <div class="add-event-wrapper">
                <div class="add-event-header">
                    <div class="title">Add Event</div>
                    <i class="fas fa-times close"></i>
                </div>
                <div class="add-event-body">
                    <div class="add-event-input">
                        <input type="text" placeholder="Appointment Name" class="event-name" />
                    </div>
                    <div class="add-event-input">
                        <input type="text"
                               placeholder="Appointment Start From"
                               class="event-time-from" />
                    </div>
                    <div class="add-event-input">
                        <input type="text"
                               placeholder="Appointment End To"
                               class="event-time-to" />
                    </div>
                </div>
                <div class="add-event-footer">
                    <!-- connect to database -->
                    <button class="add-event-btn">Add Appointment</button>
                </div>
            </div>
        </div>
        <button class="add-event">
            <i class="fas fa-plus"></i>
        </button>
    </div>
    <script src="~/js/script.js"></script>
</body>
